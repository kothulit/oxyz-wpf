<Window x:Class="OxyzWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        xmlns:vm="clr-namespace:OxyzWPF.UI.ViewModels"
        mc:Ignorable="d"
        Title="SharpDX Prototype"
        Height="450"
        Width="800">
    <Grid>
        <hx:Viewport3DX x:Name="viewPort"
                        ShowCoordinateSystem="True"
                        IsPanEnabled="{Binding IsPanEnabled}"
                        IsRotationEnabled="{Binding IsRotationEnabled}"
                        IsZoomEnabled="True"
                        Background="White"
                        MouseDown="ViewPort_MouseDown"
                        MouseMove="ViewPort_MouseMove"
                        KeyDown="viewPort_KeyDown">

            <hx:Viewport3DX.Camera>
                <hx:PerspectiveCamera Position="5,5,5"
                                      LookDirection="-5,-5,-5"
                                      UpDirection="0,1,0" />
            </hx:Viewport3DX.Camera>

            <!-- Освещение (SharpDX-версия) -->
            <hx:AmbientLight3D Color="White" />
            <hx:DirectionalLight3D Direction="-0.5,-1,-0.2"
                                   Color="White" />

            <!-- Сетка горизонтальной плоскости -->
            <hx:MeshGeometryModel3D x:Name="GridModel"
                                    Material="{x:Static hx:PhongMaterials.Gray}" />

            <!-- Куб с привязкой Transform -->
            <hx:MeshGeometryModel3D x:Name="CubeModel"
                                    Material="{x:Static hx:PhongMaterials.Green}"
                                    Transform="{Binding CubeTransform}" />
        </hx:Viewport3DX>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Background="LightGray"
                    Opacity="0.8">
            <ItemsControl ItemsSource="{Binding ToolbarButtons}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Content}"
                                Command="{Binding Command}"
                                IsEnabled="{Binding IsEnable}"
                                Background="{Binding BackgroundColor}"
                                Margin="5"
                                Cursor="Hand" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Добавить куб"
                    Command="{Binding AddCubeCommand}"
                    Margin="5"
                    Padding="10,5"
                    Background="LightBlue"
                    />
            <TextBlock Text="{Binding StatusText}"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       FontWeight="Bold" />
            <TextBlock Text="{Binding StateName}"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       FontWeight="Bold"
                       Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>